package condicional_multiple;

import java.util.Scanner;

public class Condicional_multiple {

    public static void main(String[] args) {
        Scanner leer=new Scanner(System.in);
        int opcion=0;
       
       
        System.out.println("ingrese 1 para aa");
        System.out.println("ingrese 2 para bb");
        System.out.println("ingrese 3 para cc");
        System.out.println("ingrese 4 para salir");
    
        opcion=leer.nextInt();
        
        switch (opcion) {
                case 1: 
                    System.out.println("eligio la 1");        
                    break;
                case 2: 
                    System.out.println("eligio la 2");        
                    break;
                case 3: 
                    System.out.println("eligio la 3");        
                    break;
                case 4: 
                    System.out.println("hasta la vista baby...");     
                    break;
                default:
                    System.out.println("no es una opcion valida");    
                    break;        
        }
       
    }
    
}
