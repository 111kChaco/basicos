package manejo_pantalla_teclado;

import java.util.Scanner;

public class manejo_pantalla_teclado {

    public static void main(String[] args) {
          int num;
          
          // creamos la clase leer de tipo scanner
          Scanner leer = new Scanner(System.in); 
    
          System.out.print ("Ingrese un numero ");
          num=leer.nextInt(); // toma el proximo entero que se ingrese por teclado y lo guarda en num.
          
          System.out.println ("el numero es: " + num);           
    }
    
}
